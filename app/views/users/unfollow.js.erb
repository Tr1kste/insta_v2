if(document.querySelector("#unfollow_link")){
    document.querySelector("#unfollow_link").innerHTML = "Подписаться";
    document.querySelector("#unfollow_link").href = "/users/<%= @user.id %>/follow";
    document.querySelector("#unfollow_link").classList.remove("info__unfollow");
    document.querySelector("#unfollow_link").classList.add("info__follow");
    document.querySelector("#unfollow_link").id = "follow_link";

    document.querySelector("#follow_block").innerHTML = "<%=j render "users/follow_block", user: @user %>";
}