if(document.querySelector("#comment_post_<%= @post.id %>")){
    document.querySelector("#comment_post_<%= @post.id %>").innerHTML += "<%=j render "comments/comment_post", post: @post, comment: @comment %>";
    document.querySelector("#comment_post_content_<%= @post.id %>").value = ""; 
}

if(document.querySelector("#comments_<%= @post.id %>")){
    document.querySelector("#comments_<%= @post.id %>").innerHTML += "<%=j render "comments/comment", post: @post, comment: @comment %>";
    document.querySelector("#comment_content_<%= @post.id %>").value = "";
}