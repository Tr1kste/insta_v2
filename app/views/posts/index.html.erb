<main class="home__main">
  <section class="home__main__leftColumn">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: [:home_message, :alert, alert_for(name)] %>
    <% end %>
    <div id="home_posts">
      <%= render @posts %>
    </div>
    <div id="paginate">
      <%= paginate @posts, remote: true %>
    </div>
  </section>
</main>