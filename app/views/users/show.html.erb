    </section>

    <section class="profile__nav">
        <div class="nav__wrap active">
            <%= image_tag('/icons/posts.svg') %>
            <a href="">Публикации</a>
        </div>
        <div class="nav__wrap">
            <%= image_tag('/icons/Save.svg') %>
            <a href="">Сохраненное</a>
        </div>
        <div class="nav__wrap">
            <%= image_tag('/icons/Tagged.svg') %>
            <a href="">Отметки</a>
