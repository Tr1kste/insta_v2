<header class="header">
  <div class="header__container">
    <div class="header__container__logo">
      <%= link_to image_tag('/images/logo.png', class: "header__container__logo__img"), root_path %> 
    </div>

    <form class="header__container__search">
      <input type="search" name="text" class="input--search" placeholder="Поиск"/>
    </form>

    <nav class="header__container__nav">
      <ul class="header__container__list">
        <li class="header__container__list__item">
          <%= link_to image_tag('/icons/home_active.svg', class: "header__container__list__img"), root_path %>
        </li>
        <li class="header__container__list__item">
          <%= link_to image_tag('/icons/new_post.svg', class: "header__container__list__img"), new_post_path %>
        </li>
        <li class="header__container__list__item">
          <%= link_to image_tag('/icons/like.svg', class: "header__container__list__img"), "like.html" %>
        </li>
        <li class="header__container__list__item">
          <%= link_to image_tag('/icons/logout.svg', class: "header__container__list__img"), destroy_user_session_path, method: :delete %>
        </li>
        <li class="header__container__list__item">
          <% if current_user.avatar.attached? %>
            <%= link_to image_tag(current_user.avatar, class: "header__container__list__userAvatar"), user_path(current_user) %>
          <% else %>
            <%= link_to image_tag('/icons/profile.svg', class: "header__container__list__userAvatar no__avatar"), user_path(current_user) %>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>