<div class="comments_item">
    <%= link_to comment.user.username, user_path(comment.user)%>
    <span><%= comment.content %></span>
    <% if comment.user == current_user %>
        <%= link_to image_tag('/icons/delete_comment.svg', class: "delete__img"), post_comment_path(post, comment), method: :delete, remote: true, data: { confirm: "Вы уверены, что хотите удалить комментарий?" }, class: 'delete__wrap' %>
    <% end %>
</div>